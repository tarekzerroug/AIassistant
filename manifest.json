{
  "manifest_version": 3,
  "name": "HoverGPT",
  "version": "1.0",

   "action": {
    "default_popup": "popup.html"
  },


  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "permissions": ["scripting", "activeTab"],

  "background": {
    "service_worker": "background.js"
  }
}