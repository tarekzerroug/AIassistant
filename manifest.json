{
  "manifest_version": 3,
  "name": "HoverGPT",
  "version": "1.0",

  "action": {},

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],

  "permissions": [
    "activeTab",
    "tabs"
  ],

  "background": {
    "service_worker": "background.js"
  }
}